{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "outDir": "./",
    "skipLibCheck": true,
    "module": "ESNext",
    "removeComments": true,
    "target": "ES2015",
    "types": ["chai", "loglevel", "mocha", "node", "sinon"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "src/**/*.test.ts"]
}
