{
  "name": "@leanup/stack",
  "version": "1.3.40",
  "description": "This module contains all required tools to serve, test and build a framework neutral SPA.",
  "author": "Martin Oppitz <npmjs@martinoppitz.com>",
  "homepage": "https://leanupjs.org",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/mjs/index.js"
    },
    "./.eslintrc": {
      "require": "./.eslintrc.js"
    },
    "./.mocharc": {
      "require": "./.mocharc.js"
    },
    "./nightwatch.conf": {
      "require": "./nightwatch.conf.js"
    },
    "./nightwatch.global": {
      "require": "./nightwatch.global.js"
    },
    "./nyc.config": {
      "require": "./nyc.config.js"
    },
    "./prettier.config": {
      "require": "./prettier.config.js"
    }
  },
  "files": [
    "dist",
    "*.js"
  ],
  "keywords": [
    "cucumber",
    "esbuild",
    "eslint",
    "hint",
    "lerna",
    "less",
    "lint",
    "mocha",
    "nightwatch",
    "mono-repo",
    "nyc",
    "postcss",
    "prettier",
    "pwa",
    "sass",
    "scss",
    "sinon",
    "typescript",
    "spa",
    "webhint",
    "workbox"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leanupjs/leanup.git"
  },
  "bugs": {
    "url": "https://github.com/leanupjs/leanup/issues"
  },
  "dependencies": {
    "@types/chai": "4.3.4",
    "@types/mocha": "9.1.1",
    "@types/nightwatch": "1.3.4",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "chai": "4.3.7",
    "cross-env": "7.0.3",
    "esbuild": "0.16.10",
    "esbuild-register": "3.4.2",
    "eslint": "8.30.0",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-json": "3.1.0",
    "jsdom": "19.0.0",
    "jsdom-global": "3.0.2",
    "less": "4.1.3",
    "mocha": "9.2.2",
    "mock-local-storage": "1.1.23",
    "nightwatch": "2.6.0",
    "nyc": "15.1.0",
    "postcss": "8.4.20",
    "prettier": "2.8.1",
    "sass": "1.57.1",
    "sinon": "13.0.2",
    "tslib": "2.4.1"
  },
  "devDependencies": {
    "@types/node": "17.0.45",
    "typescript": "4.5.5"
  },
  "peerDependencies": {
    "chromedriver": "*",
    "esbuild": "^0",
    "typescript": "^4"
  },
  "scripts": {
    "build:cjs": "tsc --outDir dist/cjs -p tsconfig.cjs.json && node ../../../scripts/package.js dist/cjs commonjs",
    "build:mjs": "tsc --outDir dist/mjs -p tsconfig.mjs.json && node ../../../scripts/package.js dist/mjs module",
    "build:rm": "rm -rf dist",
    "build:types": "tsc -d --outDir dist/types -p tsconfig.mjs.json && rm -rf dist/types/*.{js,map} dist/types/**/*.{js,map}",
    "build": "npm run build:rm && npm run build:cjs && npm run build:mjs && npm run build:types",
    "prepack": "npm run build"
  },
  "engines": {
    "node": ">=14 <=18",
    "npm": ">=6 <=8"
  }
}
