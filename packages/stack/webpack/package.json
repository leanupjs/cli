{
  "name": "@leanup/stack-webpack",
  "version": "1.3.50",
  "description": "This module contains all webpack-related functionalities for the @leanup/stack.",
  "author": "Martin Oppitz <npmjs@martinoppitz.com>",
  "homepage": "https://leanupjs.org",
  "main": "dist/cjs/webpack.config.js",
  "module": "dist/mjs/webpack.config.js",
  "types": "dist/types/webpack.config.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/webpack.config.js",
      "import": "./dist/mjs/webpack.config.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "esbuild",
    "swc",
    "webpack",
    "less",
    "sass",
    "scss",
    "typescript",
    "spa",
    "pwa",
    "lean",
    "compiler",
    "transpiler",
    "postcss"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leanupjs/leanup.git"
  },
  "bugs": {
    "url": "https://github.com/leanupjs/leanup/issues"
  },
  "dependencies": {
    "@swc/core": "1.5.0",
    "copy-modules-webpack-plugin": "2.2.1",
    "copy-webpack-plugin": "10.2.4",
    "css-loader": "6.11.0",
    "esbuild-loader": "2.21.0",
    "file-loader": "6.2.0",
    "less-loader": "10.2.0",
    "mini-css-extract-plugin": "2.9.0",
    "postcss-loader": "6.2.1",
    "sass-loader": "12.6.0",
    "string-replace-loader": "3.1.0",
    "swc-loader": "0.2.6",
    "webpack": "5.91.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.15.2"
  },
  "devDependencies": {
    "@leanup/stack": "1.3.50",
    "@types/node": "20.12.7",
    "tslib": "2.6.2",
    "typescript": "5.4.5"
  },
  "peerDependencies": {
    "@leanup/stack": "~1.3.49"
  },
  "scripts": {
    "build:cjs": "tsc --outDir dist/cjs -p tsconfig.cjs.json && node ../../../scripts/package.js dist/cjs commonjs",
    "build:mjs": "tsc --outDir dist/mjs -p tsconfig.mjs.json && node ../../../scripts/package.js dist/mjs module",
    "build:rm": "rm -rf dist",
    "build:types": "tsc -d --outDir dist/types -p tsconfig.mjs.json && rm -rf dist/types/*.{js,map} dist/types/**/*.{js,map}",
    "build": "pnpm build:rm && pnpm build:cjs && pnpm build:mjs && pnpm build:types",
    "prepack": "pnpm build"
  }
}
